{
  "name": "@shayrn/react-native-keyboard-safearea-view",
  "version": "0.1.2",
  "description": "React Native component to handle keyboard + safe area insets without breaking layout. Works with Expo and bare projects.",
  "main": "./lib/module/index.js",
  "types": "./lib/typescript/src/index.d.ts",
  "exports": {
    ".": {
      "source": "./src/index.tsx",
      "types": "./lib/typescript/src/index.d.ts",
      "default": "./lib/module/index.js"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "src",
    "lib",
    "android",
    "ios",
    "cpp",
    "*.podspec",
    "react-native.config.js",
    "!ios/build",
    "!android/build",
    "!android/gradle",
    "!android/gradlew",
    "!android/gradlew.bat",
    "!android/local.properties",
    "!**/__tests__",
    "!**/__fixtures__",
    "!**/__mocks__",
    "!**/.*"
  ],
  "scripts": {
    "example": "npm run --prefix example",
    "test": "jest",
    "typecheck": "tsc",
    "lint": "eslint \"**/*.{js,ts,tsx}\"",
    "type-check": "tsc --noEmit",
    "clean": "del-cli lib",
    "prepare": "bob build",
    "release": "release-it --only-version",
    "format": "prettier --write \"**/*.{ts,tsx}\"",
    "audit": "npm audit",
    "audit:fix": "npm audit fix",
    "outdated": "npm outdated"
  },
  "keywords": [
    "react-native",
    "ios",
    "android",
    "react-native",
    "expo",
    "keyboardavoidingview",
    "safearea",
    "keyboard",
    "ios",
    "android",
    "mobile-ui",
    "cross-platform",
    "shayrn",
    "keyboard-safearea-view",
    "react-native-component",
    "react-native-library"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/maheshmuttintidev/react-native-keyboard-safearea-view.git"
  },
  "author": "maheshmuttintidev <maheshmuttintidev@gmail.com> (https://github.com/maheshmuttintidev)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/maheshmuttintidev/react-native-keyboard-safearea-view/issues"
  },
  "homepage": "https://github.com/maheshmuttintidev/react-native-keyboard-safearea-view#readme",
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "devDependencies": {
    "@commitlint/config-conventional": "^19.6.0",
    "@eslint/compat": "^1.2.7",
    "@eslint/eslintrc": "^3.3.0",
    "@eslint/js": "^9.22.0",
    "@evilmartians/lefthook": "^1.5.0",
    "@react-native/babel-preset": "0.78.2",
    "@react-native/eslint-config": "^0.78.0",
    "@release-it/conventional-changelog": "^9.0.2",
    "@testing-library/react-native": "^13.3.3",
    "@types/jest": "^29.5.5",
    "@types/react": "^19.0.12",
    "@typescript-eslint/eslint-plugin": "^8.36.0",
    "@typescript-eslint/parser": "^8.36.0",
    "commitlint": "^19.6.1",
    "del-cli": "^5.1.0",
    "eslint": "^9.31.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-ft-flow": "^3.0.11",
    "eslint-plugin-jest": "^28.9.0",
    "eslint-plugin-prettier": "^5.5.1",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-native": "^5.0.0",
    "eslint-plugin-security": "^3.0.1",
    "jest": "^29.7.0",
    "prettier": "^3.6.2",
    "react": "19.0.0",
    "react-native": "0.79.5",
    "react-native-builder-bob": "^0.40.8",
    "react-test-renderer": "^19.0.0",
    "release-it": "^17.10.0",
    "typescript": "^5.8.3"
  },
  "peerDependencies": {
    "react": "*",
    "react-native": "*"
  },
  "jest": {
    "preset": "react-native",
    "modulePathIgnorePatterns": [
      "<rootDir>/example/node_modules",
      "<rootDir>/lib/"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "release-it": {
    "git": {
      "commitMessage": "chore: release ${version}",
      "tagName": "v${version}"
    },
    "npm": {
      "publish": true
    },
    "github": {
      "release": true
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "preset": {
          "name": "angular"
        }
      }
    }
  },
  "prettier": {
    "quoteProps": "consistent",
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "es5",
    "useTabs": false
  },
  "react-native-builder-bob": {
    "source": "src",
    "output": "lib",
    "targets": [
      [
        "module",
        {
          "esm": true
        }
      ],
      [
        "typescript",
        {
          "project": "tsconfig.build.json"
        }
      ]
    ]
  },
  "create-react-native-library": {
    "languages": "js",
    "type": "library",
    "version": "0.51.1"
  },
  "dependencies": {
    "@shayrn/react-native-scaler": "^1.2.0",
    "react-native-keyboard-controller": "^1.19.5",
    "react-native-safe-area-context": "^5.6.2"
  }
}
